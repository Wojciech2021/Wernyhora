{{ form_start(form) }}
<div class="container">
    <div class="d-flex justify-content-center">
        <table class="table w-25 p-3">
            <thead>
            <th colspan="2" class="text-center">{{ form_label(form.criteriesCollection) }}</th>
            </thead>
            <tbody>
            {% for critery in form.criteriesCollection %}
                <tr>
                    <th class="pr-1">{{ form_label(critery) }}</th>
                    <td>{{ form_widget(critery) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <table class="table w-25 p-3" style="margin-top: 41px;">
            <thead>
            <th colspan="2" class="text-center">{{ form_label(form.variantsCollection) }}</th>
            </thead>
            <tbody>
            {% for variant in form.variantsCollection %}
                <tr>
                    <th class="pr-1">{{ form_label(variant) }}</th>
                    <td>{{ form_widget(variant) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
<div class="d-flex justify-content-center pt-1">
    {{ form_widget(form.getRaport) }}
</div>
</div>
{{ form_end(form) }}
{% extends 'base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div>
        <h1>WERNYHORA</h1>
    </div>

{#    {% if app.user %}#}
{#        <div class="mb-3">#}
{#            Jesteś zalogowany jako {{ app.user.getEmail }}, <a href="{{ path('app_logout') }}">Logout</a>#}
{#        </div>#}
{#    {% endif %}#}
    <div class="d-flex justify-content-center mt-5">
        <div class="flex-container col-3 justify-content-center col-1 form-group">
            <div>
                <h1 class="h3 mb-3 font-weight-normal">Zaloguj się:</h1>
            </div>
            <div class="pt-3">
                <label for="inputEmail" class="pb-1">Email:</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="pt-3">
                <label for="inputPassword" class="pb-1">Hasło:</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
            <div class="d-flex justify-content-end pt-3">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
                <div style="margin-right: 305px">
                    <a href="{{ path('app_register') }}">Rejestracja</a>
                </div>
                <button class="btn btn-lg btn-primary" type="submit">
                    Zaloguj
                </button>
            </div>
        </div>
    </div>







</form>
{% endblock %}

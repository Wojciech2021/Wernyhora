{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

<div class="d-flex justify-content-center mt-5">
    <div class="flex-container col-3 justify-content-center col-1 form-group">
        <div>
            <h1 class="h3 mb-3 font-weight-normal">Zarejestruj siÄ™:</h1>
        </div>
        {{ form_start(registrationForm) }}
        <div class="pt-3">
            <div class="pb-1">
                {{ form_label(registrationForm.email) }}
            </div>
            <div>
                {{ form_widget(registrationForm.email) }}
            </div>
        </div>
        <div class="pt-3">
            <div class="pb-1">
                {{ form_label(registrationForm.plainPassword)}}
            </div>
            <div>
                {{ form_widget(registrationForm.plainPassword)}}
            </div>
        </div>
        <div class="pt-3 d-flex justify-content-end custom-control custom-checkbox checkbox-xl">
            <div class="form-check-label">
                {{ form_label(registrationForm.agreeTerms) }}
            </div>
            <div>
                {{ form_widget(registrationForm.agreeTerms) }}
            </div>
        </div>
        <div class="d-flex justify-content-end pt-3">
            <button type="submit" class="btn btn-lg btn-primary">Rejestracja</button>
        </div>
        {{ form_end(registrationForm) }}
    </div>

</div>
{% endblock %}
